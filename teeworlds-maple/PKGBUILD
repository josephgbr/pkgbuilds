pkgname=teeworlds-maple
pkgver=2
pkgrel=1
pkgdesc="Some stuff from Maple clan for TeeWorlds"
arch=(any)
url="http://themapleclan.6te.net/"
license=('GPL')
depends=('teeworlds')
source=("Maple.png" "Maple 2.png" "Maple_by_HMH.png")
md5sums=('395d39204ae3370981a1874af8ea6c31'
         '8bcef7c0c353e1475e9b1de8062ec556'
         '7943ccc1d4822d4b9b6b636dc8d90ab7')

package() {
  install -dm755 "$pkgdir"/usr/share/teeworlds/data/skins
  install -m644 "Maple.png" "$pkgdir"/usr/share/teeworlds/data/skins
  install -m644 "Maple 2.png" "$pkgdir"/usr/share/teeworlds/data/skins/
  install -m644 "Maple_by_HMH.png" "$pkgdir"/usr/share/teeworlds/data/skins/
  # it seems "Maple 2.png" won't work because of the whitespace.
}
