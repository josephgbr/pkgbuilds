
# Maintainer: josephgbr <rafael.f.f1@gmail.com>

pkgname=gnome-music-git
pkgver=20121231
pkgrel=1
pkgdesc="Play and organize your music collection"
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL')
depends=('grilo' 'gstreamer0.10' 'libgee' 'desktop-file-utils')
makedepends=('vala' 'intltool' 'gobject-introspection' 'git')
provides=('gnome-music')
conflicts=('gnome-music')
install=gnome-music-git.install

_gitroot=git://git.gnome.org/gnome-music
_gitname=gnome-music

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  ./autogen.sh --prefix=/usr --disable-schemas-compile
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
