# Maintainer: josephgbr <rafael.f.f1@gmail.com>

_name=gnome-music
pkgname=$_name-git
pkgver=268.e42e66f
pkgrel=1
pkgdesc="Play and organize your music collection"
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL')
depends=('grilo-plugins' 'gstreamer' 'libgee' 'gjs' 'tracker'
         'desktop-file-utils' 'hicolor-icon-theme')
makedepends=('intltool' 'gobject-introspection' 'gnome-common' 'git')
provides=("$_name")
conflicts=("$_name")
install=$_name-git.install
options=(!libtool)
source=("git://git.gnome.org/$_name")
md5sums=('SKIP')

pkgver() {
  cd $_name
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

build() {
  cd $_name
  ./autogen.sh --prefix=/usr --disable-schemas-compile
  make
}

package() {
  cd $_name
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
