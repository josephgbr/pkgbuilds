# Maintainer: jospehgbr <rafael.f.f1@gmail.com>

_pkgbase=enca
pkgname=lib32-${_pkgbase}
pkgver=1.14
pkgrel=1
pkgdesc="Charset analyser and converter (32 bit)"
arch=('x86_64')
url="http://cihar.com/software/enca/"
options=('!libtool')
license=('GPL')
depends=('recode' "${_pkgbase}")
makedepends=('gcc-multilib')
source=("http://dl.cihar.com/${_pkgbase}/${_pkgbase}-${pkgver}.tar.bz2")
md5sums=('03792f25aed003d3ea33b3ce1be1f256')

build() {
  export CC='gcc -m32'  
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr \
              --libexecdir=/usr/lib32 \
              --mandir=/usr/share/man \
              --with-librecode=/usr \
              --enable-external \
              --libdir=/usr/lib32
  make
}

package() {
  make -C ${_pkgbase}-${pkgver} DESTDIR="${pkgdir}" install
  rm -rf "${pkgdir}"/usr/{bin,include,share}
}
