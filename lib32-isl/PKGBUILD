# Maintainer: josephgbr <rafael.f.f1@gmail.com>

_pkgbase=isl
pkgname=lib32-${_pkgbase}
pkgver=0.11.2
pkgrel=1
pkgdesc="Library for manipulating sets and relations of integer points bounded by linear constraints (32 bit)"
arch=('x86_64')
url="http://www.kotnet.org/~skimo/isl"
depends=('lib32-gmp' "${_pkgbase}")
makedepends=('gcc-multilib')
license=('LGPL2.1')
options=('!libtool')
source=("${url}/${_pkgbase}-${pkgver}.tar.bz2")
md5sums=('c40daa17d2995d1c98a0c1aca607541f')

build() {
  export CC='gcc -m32'
  export CXX='gcc -m32'
  export PKG_CONFIG_PATH='/usr/lib32/pkgconfig'
  
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --libdir=/usr/lib32
  make
}

check() {
  cd ${_pkgbase}-${pkgver}
  make check
}

package() {
  cd ${_pkgbase}-${pkgver}
  make -j1 DESTDIR="${pkgdir}/" install
  rm -rf "${pkgdir}/usr"/{include,lib32/libisl.so.*.*.*-gdb.py}
}
