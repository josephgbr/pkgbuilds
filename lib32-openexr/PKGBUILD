# Maintainer: josephgbr <rafael.f.f1@gmail.com>

_pkgbase=openexr
pkgname=lib32-$_pkgbase
pkgver=2.0.0
pkgrel=1
pkgdesc="Openexr library for EXR images (32 bit)"
arch=('x86_64')
url="http://www.openexr.org"
license=('BSD')
depends=('lib32-zlib' 'lib32-ilmbase' "$_pkgbase")
makedepends=('gcc-multilib')
options=('!libtool')
source=("http://download.savannah.nongnu.org/releases/${_pkgbase}/${_pkgbase}-${pkgver}.tar.gz")
md5sums=('0820e1a8665236cb9e728534ebf8df18')

build() {
  export CXX='g++ -m32'
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --libdir=/usr/lib32
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
  rm -rf "${pkgdir}"/usr/{bin,include,share}
  install -dm755 "${pkgdir}"/usr/share/licenses
  ln -s ${pkgname} "${pkgdir}"/usr/share/licenses/${_pkgbase}
}
