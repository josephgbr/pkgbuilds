# Contributor: 

_pkgbase=cracklib
pkgname=lib32-$_pkgbase
pkgver=2.8.22
pkgrel=1
pkgdesc="Password Checking Library (32 bit)"
arch=('x86_64')
url="http://sourceforge.net/projects/cracklib"
license=('LGPL')
depends=('lib32-glibc' 'lib32-zlib' "$_pkgbase")
makedepends=('gcc-multilib')
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/$_pkgbase/$_pkgbase-$pkgver.tar.gz)
md5sums=('463177b5c29c7a598c991e12a4898e06')

build() {
  cd "$srcdir/$_pkgbase-$pkgver"
  ./configure --prefix=/usr --libdir=/usr/lib32 --without-python CC='gcc -m32'
  make
}

package() {
  cd "$srcdir/$_pkgbase-$pkgver"
  make DESTDIR="$pkgdir" install
  rm -rf "${pkgdir}/usr"/{include,sbin,share}
}
